      <div class="w-[50%] h-16">
        <% if(!home.isFavorite) { %>
          <%- include('../partials/add-favorites', {home: home, icon: false}) %>
          <% } else { %>
          <%- include('../partials/rem-favorites', {home: home, icon: false}) %>
          <% } %>
      </div>
    </div>

